    <record id="quick_create_vehicle_services_form_view" model="ir.ui.view">
        <field name="name">vehicle.services.quick.create.form</field>
        <field name="model">vehicle.service</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="required_checkup_id"/>
                    <field name="replacement_part_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="vehicle_services_view_form" model="ir.ui.view">
        <field name="name">vehicle.services.form</field>
        <field name="model">vehicle.service</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <h2>
                            <group>
                                <field name="required_checkup_id"/>
                                <field name="check" invisible="1"/>
                                <field name="service_type_id" invisible="check == 'Maintenance Checkup' or check == 'Inspection Checkup' or check==False"/>
                                <field name="inspection_type_id" invisible="check == 'Maintenance Checkup' or check == 'Service Checkup' or check==False"/>
                                <field name="maintenance_type_id" invisible="check == 'Inspection Checkup' or check == 'Service Checkup' or check==False"/>
                            </group>
                        </h2>
                        <group>
                            <field name="replacement_part_id" invisible="check == 'Inspection Checkup' or check == 'Service Checkup' or check == False"/>
                            <field name="currency_id"/>
                            <field name="cost_services"/>
                            <field name="total_cost"/>
                        </group>
                        <group>
                            <field name="cost_maintenance"/>
                            <field name="service_charge"/>
                            <field name="discount"/>
                            <field name="taxation"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_vehicle_services" model="ir.actions.act_window">
        <field name="name">Vehicle Services</field>
        <field name="res_model">vehicle.service</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Profile!
            </p>
        </field>
    </record>
</odoo>
